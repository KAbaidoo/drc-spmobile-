<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">140dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="materialThemeOverlay">@style/HoneyYellowButtonThemeOverlay</item>
    </style>
    <style name="HoneyYellowButtonThemeOverlay">
        <item name="colorPrimary">@color/honey_yellow</item>
    </style>

    <style name="heading_form_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline3
        </item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="heading_form_sub">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline4
        </item>
    </style>

    <style name="question_style">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
    </style>
</resources>